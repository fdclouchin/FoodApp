<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context=".FoodInformationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_title_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Food_title"
            android:textColor="#000" />

        <TextView
            android:id="@+id/food_price_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Food_price"
            android:textColor="#000" />

        <TextView
            android:id="@+id/food_descriptions_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Food_description"
            android:textColor="#000" />
    </LinearLayout>
</FrameLayout>