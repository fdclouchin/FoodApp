<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".FoodInformationFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_translucent"
        android:clickable="true"
        android:focusable="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/linear_layout_modal"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/item_fragment_modal"
            android:elevation="10dp"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/food_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center_horizontal"
                android:text="Food_title"
                android:textColor="#000"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="$"
                    android:textColor="#ff5e00"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/food_price_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:gravity="center_horizontal"
                    android:text="Food_price"
                    android:textColor="#ff5e00"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/food_info_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="food_image" />

            <TextView
                android:id="@+id/food_descriptions_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center_horizontal"
                android:text="Food_description"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/add_to_cart_info_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/orange_button"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="+ Add"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/close_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linear_layout_modal"
            android:layout_alignRight="@+id/linear_layout_modal"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="-15dp"
            android:layout_marginRight="-15dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:elevation="200dp"
            android:focusable="true"
            android:orientation="vertical">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_white_circle" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_close_icon" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>